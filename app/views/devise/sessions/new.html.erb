<% if !params[:locale].present? || params[:locale] == "ar" %>
  <div class="text-right">
<% else %>
  <div class="text-left">
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="wrapper-sign-up">
        <h2 class="text-center"><%= t(".sign_in") %></h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
           <%= link_to t("Forgot your password?"), new_password_path(resource_name) %>

          <div class="form-actions">
            <%= f.button :submit, t(".sign_in"), class:"sign-up-btn" %>
          </div>
          <div class="or-line-login">
            <span>
              or
            </span>
          </div>
          <%= link_to t(".sign_up"), new_registration_path(resource_name), class:'btn sign-up-btn' %>
        <% end %>

      </div>
    </div>
  </div>
</div>


</div>
