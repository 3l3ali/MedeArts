<% if !params[:locale].present? || params[:locale] == "ar" %>
  <div class="text-right">
<% else %>
  <div class="text-left">
<% end %>


    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="wrapper-sign-up">
            <h2 class="text-center"><%= t(".sign_up") %></h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
            <div class="form-inputs" >
              <%= f.input :Fname, label: "First name", required: true, autofocus: true %>
              <%= f.input :Lname, label: "Last name", required: true %>
              <%= f.input :email, required: true %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%= f.input :password_confirmation, required: true %>
              <%= f.input :Age, required: true %>
              <%= f.input :City, collection: User.Cities.keys, required: true %>
              <%= f.input :Accommodation, collection: User.Accommodations.keys, required: true %>
              <%= f.input :Q1, required: true %>
              <%= f.input :Q2, required: true %>
              <%= f.input :Q3, required: true %>
              <%= f.input :photo, as: :attachinary, label:false %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t(".sign_up"), class:"sign-up-btn"%>
            </div>

            <div class="or-line-login">
              <span>
                or
              </span>
            </div>
            <%= link_to "Log in", new_session_path(resource_name), class:'btn sign-up-btn' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>


</div>
